@model DataSourceViewAzureBlobStorage

<div class="form-group row">
    <div class="col-12 col-lg-2 col-form-label d-flex">
        <div class="svg-22x22-icon">
            <div class="svg-icon @Model?.Icon"></div>
        </div>
        <span class="ml-2 mr-2">
            Properties:
        </span>
    </div>
    <div class="col-12 col-lg-8 btn-sm">
        <a href="#" class="btn btn-outline-light2 btn-sm text-nowrap" id="dataSourceTestButton">
            <i class="fas fa-plug"></i>
            Test Storage Connection
        </a>
    </div>
</div>

<div class="form-group row">
    <div class="col-12 col-lg-2 col-form-label">
        <label asp-for="StorageAccountName"></label>
        <label class="text-danger">*</label>
    </div>
    <div class="col-12 col-lg-6">
        <div class="input-group">
            <div class="input-group-prepend hide-sm">
                <span class="input-group-text">https://</span>
            </div>
            <input type="text" class="form-control" asp-for="StorageAccountName" placeholder="AccountName">
            <div class="input-group-append hide-sm">
                <span class="input-group-text">.blob.core.windows.net</span>
            </div>
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-12 col-lg-2 col-form-label">
        <label asp-for="StorageAccountKey"></label>
        <label class="text-danger">*</label>
    </div>
    <div class="col-12 col-lg-6">
        <input type="text" class="form-control" asp-for="StorageAccountKey">
    </div>
</div>
