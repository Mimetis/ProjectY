@model DataSourceViewAzureSqlDatabase

<div class="form-group row">
    <div class="col-12 col-lg-2 col-form-label text-nowrap">
        <label asp-for="DataSource" class="col-form-label"></label>
        <label class="text-danger">*</label>
    </div>
    <div class="col-12 col-lg-6">
        <div class="input-group">
            <input type="text" class="form-control" asp-for="DataSource" placeholder="Server">
            <div class="input-group-append">
                <span class="input-group-text">.database.windows.net</span>
            </div>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-12 col-lg-2 col-form-label">
        <label asp-for="InitialCatalog"></label>
        <label class="text-danger">*</label>
    </div>
    <div class="col-12 col-lg-6">
        <input type="text" class="form-control" asp-for="InitialCatalog" placeholder="Database Name">
    </div>
</div>
<div class="form-group row">
    <div class="col-12 col-lg-2 col-form-label">
        <label asp-for="UserId"></label>
        <label class="text-danger">*</label>
    </div>
    <div class="col-12 col-lg-6">
        <input type="text" class="form-control" asp-for="UserId" placeholder="User Id">
    </div>
</div>
<div class="form-group row">
    <div class="col-12 col-lg-2 col-form-label">
        <label asp-for="Password"></label>
        <label class="text-danger">*</label>
    </div>
    <div class="col-12 col-lg-6">
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
    </div>
</div>
