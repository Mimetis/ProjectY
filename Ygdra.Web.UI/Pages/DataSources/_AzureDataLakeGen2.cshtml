@model DataSourceViewAzureBlobFS

<div class="form-group row">
    <div class="col-12 col-lg-2 col-form-label">
        <label asp-for="StorageAccountName"></label>
        <label class="text-danger">*</label>
    </div>
    <div class="col-12 col-lg-6">
        <div class="input-group">
            <div class="input-group-prepend hide-sm">
                <span class="input-group-text">https://</span>
            </div>
            <input type="text" class="form-control" asp-for="StorageAccountName" placeholder="AccountName">
            <div class="input-group-append hide-sm">
                <span class="input-group-text">.dfs.core.windows.net</span>
            </div>
        </div>
    </div>
</div>

<div class="form-group row">
    <div class="col-12 col-lg-2 col-form-label">
        <label asp-for="StorageAccountKey"></label>
        <label class="text-danger">*</label>
    </div>
    <div class="col-12 col-lg-6">
        <input type="text" class="form-control" asp-for="StorageAccountKey">
    </div>
</div>
