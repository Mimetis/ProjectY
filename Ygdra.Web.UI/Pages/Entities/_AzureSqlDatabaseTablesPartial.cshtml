@model EntityViewAzureSqlTable

<div class="d-flex align-items-center mb-2 mt-2">
    <div class="svg-22x22-icon">
        <div class="svg-icon @Model?.Icon"></div>
    </div>
    <span class="ml-2 mr-2">
        Azure SQL Database properties:
    </span>
</div>

<input type="hidden" asp-for="DataSourcesItemsString" value="@Model?.DataSourcesItemsString" />
<input type="hidden" asp-for="TablesItemsString" value="@Model?.TablesItemsString" />

<div class="form-group row">
    <div class="col-12 col-lg-2 col-form-label">
        <label asp-for="DataSourceName">Choose a data source:</label>
        <label class="text-danger">*</label>
    </div>
    <div class="col-8 col-lg-3">
        <select class="form-control"
                data-container="body"
                asp-items="@Model?.DataSourcesItems"
                asp-for="DataSourceName">
        </select>
    </div>
    <div class="col-2 col-lg-1">
        <a asp-page="/DataSources/New" class="btn btn-outline-light2 btn-sm">
            <i class="fas fa-plus-circle"></i>
            New
        </a>
    </div>
    <div class="col-12 col-lg-8 offset-lg-2"><span id="labelErrorDataSources" class="text-danger"></span></div>
</div>
<div class="form-group row">

    <div class="col-12 col-lg-2 col-form-label">
        <label>Choose a table:</label>
        <label class="text-danger">*</label>
    </div>
    <div class="col-8 col-lg-3">
        <select class="form-control"
                data-container="body"
                asp-items="@Model?.TablesItems"
                asp-for="TableName">
        </select>
    </div>
    <div class="col-4 col-lg-2">
        <a href="#" class="btn btn-outline-light2 btn-sm"
           data-target="#panelPreview"
           data-title="Table preview"
           data-toggle="modal"
           id="previewEntityButton">
            <i class="fas fa-glasses"></i>
            Preview
        </a>
    </div>
    <div class="col-12 col-lg-8 offset-lg-2"><span id="labelErrorTables" class="text-danger"></span></div>
</div>


<div class="form-group row">

    <div class="col-12 col-lg-2 col-form-label">
        <label>Choose a mode:</label>
        <label class="text-danger">*</label>
    </div>
    <div class="col-8 col-lg-3">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Mode" id="modeFull" value="Full">
            <label class="form-check-label" for="modeFull">Full</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Mode" id="modeDelta" value="Delta">
            <label class="form-check-label" for="modeDelta">Delta</label>
        </div>
        <div id="deltaPanel" class="ml-lg-5">
            <label class="form-check-label" asp-for="TimestampColumn">Modified entity column</label>
            <input type="text" class="form-control" asp-for="TimestampColumn">
            
            <label class="form-check-label" asp-for="KeyColumn">Primary key column</label>
            <input type="text" class="form-control" asp-for="KeyColumn">
        </div>
    </div>
</div>

