@page "{handler?}"
@model Ygdra.Web.UI.Pages.Entities.NewModel
@{
}

<breadcrumb asp-homepage-title="Dashboard"
            asp-homepage-url="/Dashboard"
            asp-homepage-glyphicon="glyphicon glyphicon-home"></breadcrumb>


<form method="post" class="overflow-hidden d-flex flex-column h-100">

    <div class="docking-form">

        <h2 class="h5">New Entity</h2>

        <div>
            <p>Create a new entity: Choose your data source, then create your entity</p>
            <ul>
                <li>
                    Choose your engine.
                </li>
                <li>
                    Choose your entity type.
                </li>
                <li>
                    Fill the properties.
                </li>
            </ul>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div id="smartWizard">
            <ul class="nav">
                <li>
                    <a class="nav-link" href="#step-1">
                        Engine
                    </a>
                </li>
                <li>
                    <a class="nav-link" href="#step-2">
                        Entity type
                    </a>
                </li>
                <li>
                    <a class="nav-link" href="#step-3">
                        Properties
                    </a>
                </li>
            </ul>

            <div class="tab-content">

                <div id="step-1" class="tab-pane" role="tabpanel">

                    <div class="mb-2">
                        1) Choose an engine on which your entity will be created and the data source to connect to your entity:
                    </div>

                    <input type="hidden" asp-for="EntityView.EngineId">

                    <table id="enginesTable" class="table table-striped table-hover">
                        <thead class="thead-dark">
                        </thead>
                    </table>

                </div>
                <div id="step-2" class="tab-pane" role="tabpanel">
                    <div class="mb-2">
                        2) Choose the entity type you want to create:
                    </div>

                    <div class="btn-group btn-group-toggle" data-toggle="buttons">

                        <div class="card-deck mb-3 text-center">
                            <div class="card mb-4 shadow-sm">
                                <div class="btn btn-outline-dark card-body d-flex flex-column align-items-center">
                                    <input type="radio" asp-for="EntityView.EntityType" id="EntityView.AzureSqlDatabase" value="AzureSqlTable">
                                    <div class="svg-100x100-icon"><div class="svg-icon svg-i-100x100-AzureSQLDatabase"></div></div>
                                    <div class="my-0 font-weight-normal">Azure Sql Database Table</div>
                                </div>
                            </div>
                            <div class="card mb-4 shadow-sm">
                                <div class="btn btn-outline-dark card-body d-flex flex-column align-items-center">
                                    <input type="radio" asp-for="EntityView.EntityType" id="EntityView.AzureMySqlTable" value="AzureMySqlTable">
                                    <div class="svg-100x100-icon"><div class="svg-icon svg-i-100x100-azure_database_for_mysql"></div></div>
                                    <div class="my-0 font-weight-normal">Azure MySql Database Table</div>
                                </div>
                            </div>
                            <div class="card mb-4 shadow-sm">
                                <div class="btn btn-outline-dark card-body d-flex flex-column align-items-center">
                                    <input type="radio" asp-for="EntityView.EntityType" id="EntityView.DelimitedText" value="DelimitedText">
                                    <div class="svg-100x100-icon"><div class="svg-icon svg-i-100x100-DelimitedText"></div></div>
                                    <div class="my-0 font-weight-normal">Delimited Text</div>
                                </div>
                            </div>
                            <div class="card mb-4 shadow-sm">
                                <div class="btn btn-outline-dark card-body d-flex flex-column align-items-center">
                                    <input type="radio" asp-for="EntityView.EntityType" id="EntityView.Json" value="Json">
                                    <div class="svg-100x100-icon"><div class="svg-icon svg-i-100x100-Json"></div></div>
                                    <div class="my-0 font-weight-normal">Json</div>
                                </div>
                            </div>
                            <div class="card mb-4 shadow-sm">
                                <div class="btn btn-outline-dark card-body d-flex flex-column align-items-center">
                                    <input type="radio" asp-for="EntityView.EntityType" id="EntityView.Parquet" value="Parquet">
                                    <div class="svg-100x100-icon"><div class="svg-icon svg-i-100x100-Parquet"></div></div>
                                    <div class="my-0 font-weight-normal">Parquet</div>
                                </div>
                            </div>
                            <div class="card mb-4 shadow-sm">
                                <div class="btn btn-outline-dark card-body d-flex flex-column align-items-center">
                                    <input type="radio" asp-for="EntityView.EntityType" id="EntityView.AzureCosmosDB" value="AzureCosmosDB">
                                    <div class="svg-100x100-icon"><div class="svg-icon svg-i-100x100-AzureCosmosDB"></div></div>
                                    <div class="my-0 font-weight-normal">Azure Cosmos DB (SQL API)</div>
                                </div>
                            </div>
                            <div class="card mb-4 shadow-sm">
                                <div class="btn btn-outline-dark card-body d-flex flex-column align-items-center">
                                    <input type="radio" asp-for="EntityView.EntityType" id="EntityView.RestResource" value="RestResource">
                                    <div class="svg-100x100-icon"><div class="svg-icon svg-i-100x100-REST"></div></div>
                                    <div class="my-0 font-weight-normal">REST</div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div id="step-3" class="tab-pane" role="tabpanel">
                    <div class="mb-2">
                        <i class="fas fa-passport ml-2 mr-2"></i>
                        Entity properties:
                    </div>
                    <div class="form-group row">
                        <div class="col-4 col-lg-2 col-form-label">
                            <label asp-for="EntityView.Name"></label>
                            <label class="text-danger">*</label>
                        </div>
                        <div class="col-12 col-lg-8">
                            <input type="text" class="form-control" asp-for="EntityView.Name">
                            <small id="lblEngineNameHelper" class="form-text text-muted">
                                Entity name
                            </small>
                        </div>
                    </div>

                    <div id="properties">
                        @if ((Model.EntityView as EntityViewAzureSqlTable) != null)
                        {
                            ViewData.TemplateInfo.HtmlFieldPrefix = nameof(EntityView);
                            <partial name="_AzureSqlDatabaseTablesPartial" model="Model.EntityView" />
                        }

                        @if ((Model.EntityView as EntityViewDelimitedText) != null)
                        {
                            ViewData.TemplateInfo.HtmlFieldPrefix = nameof(EntityView);
                            <partial name="_AzureDataLakeStorageDelimitedPartial" model="Model.EntityView" />
                        }

                    </div>
                </div>
                <div id="step-4" class="tab-pane" role="tabpanel">
                </div>

            </div>

            <div id="spinner" class="spinner">
                <div>
                    <i class="fa fa-spinner fa-spin fa-fw fa-2x"></i>
                    <span class="mt-2"><strong>Loading ....</strong></span>
                </div>
            </div>

        </div>
    </div>

    <div class="docking-footer">
        <a class="btn btn-primary btn-sm" disabled href="#" id="previousButton">
            < Previous
        </a>
        <button type="submit" class="btn btn-primary btn-sm" id="nextButton">
            Next >
        </button>
        <button type="submit" class="btn btn-success btn-sm" id="saveButton">
            <i class="fas fa-save"></i>
            Create
        </button>
    </div>
</form>

<script>
    function personsFormatter(value, row) {
        return `<mgt-people show-max='5' user-ids='${value}'></mgt-people>`;
    }

    function engineTypeFormatter(value, row) {
        return `<div class='svg-22x22-icon'><div class='svg-icon ${value.engineTypeIconString}'></div></div>`;
    }

    function strongFormatter(value, row) {
        return `<strong>${value}</strong>`;
    }

    function statusFormatter(value, row) {
        return `<i class="${value.statusIcon}" title='${value.statusString}' style="color:${value.statusColor};width:20px;"></i>`;
    }

    function loadingTemplate(message) {
        return '<i class="fa fa-spinner fa-spin fa-fw fa-2x"></i>'
    }

    function dataSourceViewIconFormatter(value, row) {
        return `<div class='svg-22x22-icon'><div class='svg-icon ${value}'></div></div>`;
    }
</script>
